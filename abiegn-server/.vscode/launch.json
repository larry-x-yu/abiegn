{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine-ts Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine-ts",
            "args": [
                "--config=jasmine.json",
                "--project=tsconfig-test.json"
                // "./src/**/*.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "outputCapture": "console"
        }
    ]
}